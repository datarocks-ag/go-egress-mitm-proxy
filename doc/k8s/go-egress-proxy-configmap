apiVersion: v1
kind: ConfigMap
metadata:
  name: proxy-config
data:
  config.yaml: |
    proxy:
      port: "8080"
      metrics_port: "9090"
      default_policy: "BLOCK"
      mitm_cert_path: "/etc/proxy/certs/ca.crt"
      mitm_key_path: "/etc/proxy/certs/ca.key"
    rewrites:
      - domain: "api.production.com"
        target_ip: "10.20.30.40"
    acl:
      whitelist:
        - "^.*\\.google\\.com$"